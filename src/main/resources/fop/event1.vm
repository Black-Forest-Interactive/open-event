<?xml version="1.0" encoding="utf-8"?>

<!-- example for a simple fo file. At the beginning the page layout is set.
  Below fo:root there is always
- a single fo:layout-master-set which defines one or more page layouts
- an optional fo:declarations
- and a sequence of one or more fo:page-sequences containing the text and formatting instructions
-->

<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format" font-family="Helvetica">
    <fo:layout-master-set>
        <fo:simple-page-master master-name="A4" margin-top="1.5cm" margin-bottom="1.5cm" margin-left="1.5cm"
                               margin-right="1.5cm" page-height="297mm" page-width="210mm">
            <fo:region-body region-name="page-body" margin-top="1.0cm" margin-bottom="1.0cm"/>
            <fo:region-before region-name="page-header" extent="0.5cm"/>
            <fo:region-after region-name="page-footer" extent="0.5cm"/>
        </fo:simple-page-master>
    </fo:layout-master-set>

    <fo:declarations>
        <x:xmpmeta xmlns:x="adobe:ns:meta/">
            <rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#">
                <rdf:Description rdf:about="" xmlns:dc="http://purl.org/dc/elements/1.1/">
                    <dc:title>$esc.xml(${info.event.title})</dc:title>
                    <dc:creator></dc:creator>
                    <dc:description>Events exported from open event</dc:description>
                </rdf:Description>
                <rdf:Description rdf:about="" xmlns:xmp="http://ns.adobe.com/xap/1.0/">
                    <xmp:CreatorTool>Open Event</xmp:CreatorTool>
                </rdf:Description>
            </rdf:RDF>
        </x:xmpmeta>
    </fo:declarations>

    <fo:bookmark-tree>
        <fo:bookmark internal-destination="${info.event.id}">
            <fo:bookmark-title>$esc.xml(${info.event.title})</fo:bookmark-title>
        </fo:bookmark>
    </fo:bookmark-tree>

    #foreach($info in ${content})
    <fo:page-sequence master-reference="A4">
        <!-- HEADER-->
        <fo:static-content flow-name="page-header">
            <fo:block border-bottom="thin solid #777777" font-size="60%" text-align-last="justify">
                <fo:inline>${date}</fo:inline>
                <fo:leader/>
                <fo:inline>
                    <fo:external-graphic content-width="25mm" src="url('${logo}')"/>
                </fo:inline>
            </fo:block>
        </fo:static-content>

        <!-- FOOTER-->
        <fo:static-content flow-name="page-footer">
            <fo:block text-align="center" font-size="60%">
                Seite
                <fo:page-number/>
            </fo:block>
        </fo:static-content>
        <!-- BODY -->
        <fo:flow flow-name="page-body" font-size="9pt">

            <fo:table id="${info.event.id}">
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell number-columns-spanned="6">
                            <fo:block text-align="start">
                                <fo:external-graphic content-width="75mm" padding-left="-8mm" src="url('${image}')"/>
                            </fo:block>
                        </fo:table-cell>
                        <fo:table-cell number-columns-spanned="12">
                            <fo:block text-align="start" font-size="18pt" font-weight="bold" padding="5px">
                                $esc.xml(${info.event.title})
                            </fo:block>
                            <fo:block text-align="justify" font-size="12pt">$esc.xml(${info.event.longText})</fo:block>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>

            <fo:table space-before="3mm" border="thin solid #CCCCCC">
                <fo:table-body>
                    <fo:table-row>
                        <fo:table-cell padding="4px" number-columns-spanned="8">
                            <fo:table>
                                <fo:table-body>
                                    <fo:table-row>
                                        <fo:table-cell padding="4px" number-columns-spanned="4">
                                            <fo:block font-weight="bold" font-size="12pt">WER:</fo:block>
                                        </fo:table-cell>
                                        <fo:table-cell padding="4px" number-columns-spanned="10">
                                            <fo:block
                                                    font-size="12pt">$esc.xml(${info.event.owner.getTitle()})</fo:block>
                                            <fo:block font-size="12pt">$esc.xml(${info.event.owner.email})</fo:block>
                                        </fo:table-cell>
                                    </fo:table-row>
                                    <fo:table-row>
                                        <fo:table-cell padding="4px" number-columns-spanned="4">
                                            <fo:block font-weight="bold" font-size="12pt">WO:</fo:block>
                                        </fo:table-cell>
                                        <fo:table-cell padding="4px" number-columns-spanned="10">
                                            <fo:block font-size="12pt">$esc.xml(${info.location.format()})</fo:block>
                                        </fo:table-cell>
                                    </fo:table-row>
                                    <fo:table-row>
                                        <fo:table-cell padding="4px" number-columns-spanned="4">
                                            <fo:block font-weight="bold" font-size="12pt">WANN:</fo:block>
                                        </fo:table-cell>
                                        <fo:table-cell padding="4px" number-columns-spanned="10">
                                            <fo:block font-size="12pt">$esc.xml(${info.event.format()})</fo:block>
                                        </fo:table-cell>
                                    </fo:table-row>
                                </fo:table-body>
                            </fo:table>
                        </fo:table-cell>
                        <fo:table-cell padding="4px" number-columns-spanned="8">
                            <fo:table>
                                <fo:table-body>
                                    <fo:table-row>
                                        <fo:table-cell padding="4px" number-columns-spanned="7">
                                            <fo:block font-weight="bold" font-size="12pt">max. Teilnehmer:</fo:block>
                                        </fo:table-cell>
                                        <fo:table-cell padding="4px" number-columns-spanned="8">
                                            <fo:block
                                                    font-size="12pt">$esc.xml(${info.registration.registration.maxGuestAmount})</fo:block>
                                        </fo:table-cell>
                                    </fo:table-row>
                                    #if(!$info.categories.empty)
                                        <fo:table-row>
                                            <fo:table-cell padding="4px" number-columns-spanned="7">
                                                <fo:block font-weight="bold" font-size="12pt">Kategorie:</fo:block>
                                            </fo:table-cell>
                                            <fo:table-cell padding="4px" number-columns-spanned="8">
                                                #foreach($category in ${info.categories})
                                                    <fo:block font-size="12pt">$esc.xml(${category.name})</fo:block>
                                                #end
                                            </fo:table-cell>
                                        </fo:table-row>
                                    #end
                                </fo:table-body>
                            </fo:table>
                        </fo:table-cell>
                        <fo:table-cell padding="4px" number-columns-spanned="5">
                            <fo:block text-align="center">
                                <fo:block font-weight="bold">Online Anmeldung:</fo:block>
                                <fo:external-graphic src="url(data:image/png;base64,${info.qrCode})" content-height="3.5cm"/>
                            </fo:block>
                        </fo:table-cell>
                    </fo:table-row>
                </fo:table-body>
            </fo:table>
        </fo:flow>
    </fo:page-sequence>

    <fo:page-sequence master-reference="A4">
        <!-- HEADER-->
        <fo:static-content flow-name="page-header">
            <fo:block border-bottom="thin solid #777777" font-size="60%" text-align-last="justify">
                <fo:inline>${date}</fo:inline>
                <fo:leader/>
                <fo:inline>
                    <fo:external-graphic content-width="25mm" src="url('${logo}')"/>
                </fo:inline>
            </fo:block>
        </fo:static-content>
        <!-- BODY -->
        <fo:flow flow-name="page-body" font-size="9pt">


            <fo:block text-align="center" font-size="12pt" font-weight="bold" padding="4px" space-before="3mm">
                Wenn möglich bitte digital anmelden. Für analoge Anmeldung Zettel abreißen, ausfüllen und registrieren
                lassen.
            </fo:block>

            <fo:block-container>
                #foreach($as in ${info.availableSpace})
                    <fo:table space-before="3mm" border="thin solid #CCCCCC">
                        <fo:table-body>
                            <fo:table-row>
                                <fo:table-cell padding="4px" number-columns-spanned="12">
                                    <fo:block font-size="16pt" font-weight="bold"
                                              text-align="left">$esc.xml(${info.event.title})</fo:block>
                                </fo:table-cell>
                                <fo:table-cell padding="4px" number-columns-spanned="2" number-rows-spanned="2">
                                    <fo:block text-align="center">
                                        <fo:external-graphic src="url(data:image/png;base64,${info.qrCode})"
                                                             content-height="2.0cm"/>
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                            <fo:table-row>
                                <fo:table-cell padding="4px" number-columns-spanned="5">
                                    <fo:block font-size="10pt"
                                              text-align="left">$esc.xml(${info.event.format()})</fo:block>
                                </fo:table-cell>
                                <fo:table-cell padding="4px" number-columns-spanned="4">
                                    <fo:block font-size="10pt"
                                              text-align="left">$esc.xml(${info.event.owner.getTitle()})</fo:block>
                                    <fo:block font-size="10pt"
                                              text-align="left">$esc.xml(${info.event.owner.email})</fo:block>
                                </fo:table-cell>
                                <fo:table-cell padding="4px" number-columns-spanned="3">
                                    <fo:block font-size="10pt"
                                              text-align="left">$esc.xml(${info.location.street}) $esc.xml(${info.location.streetNumber})</fo:block>
                                    <fo:block font-size="10pt"
                                              text-align="left">$esc.xml(${info.location.zip}) $esc.xml(${info.location.city})</fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                            <fo:table-row height="0.7cm">
                                <fo:table-cell padding="4px" number-columns-spanned="2">
                                    <fo:block font-size="12pt" font-weight="bold" text-align="left">Name:</fo:block>
                                </fo:table-cell>
                                <fo:table-cell padding="4px" number-columns-spanned="5">
                                    <fo:block font-size="12pt" font-weight="bold" text-align="left">
                                        __________________________
                                    </fo:block>
                                </fo:table-cell>
                                <fo:table-cell padding="4px" number-columns-spanned="2">
                                    <fo:block font-size="12pt" font-weight="bold" text-align="left">EMail:</fo:block>
                                </fo:table-cell>
                                <fo:table-cell padding="4px" number-columns-spanned="5">
                                    <fo:block font-size="12pt" font-weight="bold" text-align="left">
                                        __________________________
                                    </fo:block>
                                </fo:table-cell>
                            </fo:table-row>
                        </fo:table-body>
                    </fo:table>
                #end
            </fo:block-container>
        </fo:flow>
    </fo:page-sequence>
    #end
</fo:root>
